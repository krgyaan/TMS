# API
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL=postgres://<user>:<pass>@localhost:5432/<db-name>
PGSSL=false
PG_MAX_POOL=10

# Auth
JWT_ACCESS_SECRET=change-me
JWT_ACCESS_EXPIRES_IN=1h
STATE_SECRET=change-me-too
AUTH_GOOGLE_REDIRECT=http://localhost:5173/login/google

# Google Integration
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/integrations/google/callback
# Login scopes only - Drive scopes are requested separately when creating costing sheets
GOOGLE_SCOPES=openid email profile
GOOGLE_SUCCESS_REDIRECT=http://localhost:5173/integrations/google/status

# Google Drive - Team Folders (Root folder ID for each team)
GOOGLE_DRIVE_FOLDER_TEAM_1=your-folder-id-for-ac-team
GOOGLE_DRIVE_FOLDER_TEAM_2=your-folder-id-for-dc-team
GOOGLE_DRIVE_FOLDER_TEAM_7=your-folder-id-for-private-team

# Google Sheets - Team Templates (Optional - leave empty for blank sheets)
GOOGLE_TEMPLATE_TEAM_1=your-template-id-for-ac-team
GOOGLE_TEMPLATE_TEAM_2=your-template-id-for-dc-team
GOOGLE_TEMPLATE_TEAM_7=your-template-id-for-private-team
